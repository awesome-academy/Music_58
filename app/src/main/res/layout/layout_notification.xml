<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_text_black"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dp_20"
    android:paddingRight="@dimen/dp_20">

    <ImageView
        android:id="@+id/image_artwork_mini"
        android:layout_width="@dimen/dp_50"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_album_white" />

    <LinearLayout
        android:layout_width="@dimen/dp_100"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_4"
        android:gravity="left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_track_name_mini"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/color_text_white"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:id="@+id/text_artist_mini"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/color_text_white"
            android:textSize="@dimen/sp_10" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_control_song"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_prev_mini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_2"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:src="@drawable/ic_skip_previous_white" />

        <ImageView
            android:id="@+id/image_play_mini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_2"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:src="@drawable/ic_play_white_24dp" />

        <ImageView
            android:id="@+id/image_next_mini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_2"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:src="@drawable/ic_skip_next_white" />

    </LinearLayout>

</LinearLayout>
